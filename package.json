{
  "name": "rails-boilerplate",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:dfsobreira/rails-7-react-boilerplate.git",
  "author": "Diogo Sobreira <dfsobreira@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@hotwired/stimulus": "^3.2.2",
    "@hotwired/turbo-rails": "^8.0.16",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "autoprefixer": "^10.4.21",
    "esbuild": "^0.25.9",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "typescript": "^5.9.2",
    "@tailwindcss/postcss": "^4.0.0"
  },
  "scripts": {
    "build": "esbuild app/javascript/*.* --bundle --sourcemap --format=esm --outdir=app/assets/builds --public-path=/assets",
    "build:css": "postcss ./app/assets/stylesheets/application.postcss.css -o ./app/assets/builds/application.css --sourcemap --verbose",
    "build:css:watch": "postcss ./app/assets/stylesheets/application.postcss.css -o ./app/assets/builds/application.css --sourcemap --verbose --watch"
  },
  "devDependencies": {
    "postcss-custom-properties": "^14.0.6",
    "postcss-import": "^16.1.1",
    "postcss-nested": "^7.0.2"
  }
}
